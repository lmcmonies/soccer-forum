<% layout('layouts/boilerplate') -%>


<header class="jumbotron">
        <h1>Users</h1>
        </header>
            <div class="container-fluid">
                <div class="row">
                    <% users.forEach(function(user){ %>
                      <% if(!user.isAdmin){ %>
                <div class="col-lg-4 col-sm-6">
                  <div class="card img-fluid" style="width: 40rem;">
           
                <div class = "card-block">
                  <img class="card-img-top" id="indexCard" src="<%= user.userAvatar %>" alt="Card image cap">
                  <div class="card-body">
                    <h5 class="card-title"><%= user.username %></h5>
                    <h5 class="card-title"><%= user.userFirstName %></h5>
                    <h5 class="card-title"><%= user.userLastName %></h5>
                    <h5 class="card-title"><%= user.email %></h5>
                 
                    
                    <div class="text-left">
                    <a class="btn btn-warning" href="/admin/<%= user._id %>/edit">Edit</a>
                    <form id="delete-form" action="/admin/<%= user._id %>?_method=DELETE" method="POST" style="border:none;">
                    <button class="btn btn-danger delete-button" type="submit">Delete</button>  
                    </form>
                  </div>
                    
                  
                   
                   </div>
                  </div>
                </div>
                  </div>
                  <% } %>
         
                  <% }); %>
                  </div>
                </div>
               
              
          

        
                 
      
            

       
                  
                  
